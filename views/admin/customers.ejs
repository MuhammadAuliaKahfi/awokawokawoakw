<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/admin.css">
    <title>Pelanggan</title>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
            <div class="container-fluid">
                <div class="row">
                    <%-include('partials/sidebar.html')%>
                        <div class="col-md-10 content">
                            <form method="post">
                                <div class="input-group mb-5 search-bar">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="inputGroupSelect01">Cari Pelanggan</label>
                                    </div>
                                    <select class="custom-select dropbar cari" id="inputGroupSelect01" name="searchBy">
                                        <option selected>Oleh...</option>
                                        <option value="name">Nama</option>
                                        <option value="phone">Nomor Telepon</option>
                                        <option value="email">Email</option>
                                        <option value="address">Alamat</option>
                                        <option value="gender">jenis kelamin</option>
                                    </select>
                                    <div class="form-inline">
                                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="word">
                                        <button class="btn" type="submit">Cari</button>
                                    </div>
                                </div>
                            </form>

                            <table class="table table-striped table-light">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nama</th>
                                        <th scope="col">Nomor Telepon</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Alamat</th>
                                        <th scope="col">jenis kelamin</th>
                                        <th scope="col">Tindakan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i< res.length; i++){ %>
                                    <tr>
                                        <% if(res[i].is_admin == 1){
                                                continue;
                                           }
                                        %>
                                        <th scope="row"><%=res[i].user_id%></th>
                                        <td><a href="/admin/customers/profile/<%=res[i].user_id%>"><%=res[i].name%></a></td>
                                        <td><%=res[i].phone%></td>
                                        <td><%=res[i].email%></td>
                                        <td><%=res[i].address%></td>
                                        <td><%=res[i].gender%></td>
                                        <td>
                                            <a href="/admin/customers/edit/<%=res[i].user_id%>">Edit Pelanggan</a> |
                                            <a href="/admin/customers/delete/<%=res[i].user_id%>">Hapus Pelanggan</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                </div>
            </div>

            <%-include('../partials/footer.html')%>
