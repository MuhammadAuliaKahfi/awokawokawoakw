<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/admin.css">
    <title>Profil Pelanggan Tampilan Admin</title>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
            <div class="container-fluid">
                <div class="row">
                    <%-include('partials/sidebar.html')%>
                        <div class="col-md-10 content">
                            <div class="row">
                                <div class="col-md-6 profile-content konten">
                                    <p class="display-4 profile">Profil <%=res.name%></p>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Nama</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly value="<%=res.name%>">
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly value="<%=res.email%>">
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Nomor Telepon</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly value="<%=res.phone%>">
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Alamat</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly value="<%=res.address%>">
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Jenis kelamin</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" readonly value="<%=res.gender%>">
                                        </div>
                                    </div>
                                    <hr>
                                    <a href="/admin/customers/edit/<%=res.user_id%>">Edit Pelanggan</a> |
                                    <a href="/admin/customers/delete/<%=res.user_id%>">Hapus Pelanggan</a>

                                </div>
                                <div class="col-md-5 profile-content">
                                    <img class="profile-pic" src="/../../images/profile-pic.jpg" alt="">
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <%-include('../partials/footer.html')%>
